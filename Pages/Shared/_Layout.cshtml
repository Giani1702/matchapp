<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @nameof(Assets.AthletLink)</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MatchApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mali:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c&display=swap" rel="stylesheet">
</head>
<body id="main-gradient">
    <header>
        <nav class="navbar navbar-expand-xs navbar-toggleable-xs navbar-light bg-white border-bottom box-shadow mb-3" style="height: 50px; ">
            <div class="container" style="width: auto; position: absolute; float: left;">
                <object id="ballLogo" data="Assets/Logo/ball_logo.svg" width="30" height="30" image-rendering="optimizeQuality" style="margin-right: -5px" type="image/svg+xml"></object>
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <a class="mali-regular navbar-brand" style="transform: rotate(180deg); margin-right: 0px; margin-left: 0px; margin-top: 0px; font-size: 26px" asp-area="" asp-page="/Index">V</a>

                    @{
                        var appName = nameof(Assets.AthletLink);
                        var navBarAppName = appName[1..];
                    }

                    <a class="mplus-regular navbar-brand" style="font-size: 26px" asp-area="" asp-page="/Index">@navBarAppName</a>
                </a>
            </div> 
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>